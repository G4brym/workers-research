	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@cloudflare/vitest-pool-workers": "^0.8.34",
		"@cloudflare/workers-types": "^4.20250531.0",
		"@tailwindcss/cli": "^4.1.8",
		"@types/node": "^22.15.29",
		"daisyui": "^5.0.43",
		"tailwindcss": "^4.1.8",
